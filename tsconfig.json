    "exclude": ["node_modules", "**/*.spec.ts"],
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "jsx": "react",
        "esModuleInterop": true,
        "noEmit": true,
        "allowJs": true,
        "checkJs": true
    }
}
